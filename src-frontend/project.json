{
  "name": "frontend",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "src-frontend",
  "implicitDependencies": [
    "server"
  ],
  "targets": {
    "install": {
      "command": "pnpm install",
      "cache": true,
      "inputs": [
        "{projectRoot}/package.json"
      ]
    },
    "dev": {
      "command": "pnpm vite",
      "continuous": true,
      "dependsOn": [
        "install",
        "watch-api",
        {
          "target": "dev",
          "projects": [
            "server"
          ]
        }
      ]
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "install",
        "generate-api"
      ],
      "cache": true,
      "options": {
        "commands": [
          "pnpm tsc",
          "pnpm vite build"
        ],
        "parallel": false
      },
      "inputs": [
        "{projectRoot}/**/*",
        "!{projectRoot}/node_modules/**/*"
      ],
      "outputs": [
        "{projectRoot}/dist"
      ]
    },
    "generate-api": {
      "command": "pnpm orval",
      "inputs": [
        "{workspaceRoot}/openapi.json",
        "{projectRoot}/orval.config.ts"
      ],
      "dependsOn": [
        {
          "target": "export-openapi",
          "projects": [
            "server"
          ]
        }
      ]
    },
    "watch-api": {
      "command": "pnpm nodemon --on-change-only --watch ../openapi.json --watch orval.config.ts --exec pnpm orval",
      "continuous": true,
      "dependsOn": [
        "install",
        {
          "target": "watch-schema",
          "projects": [
            "server"
          ]
        }
      ]
    }
  }
}